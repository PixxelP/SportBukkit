+    public static PlayerMoveEvent callPlayerMotionFlagEvent(Player player, MotionFlag flag, boolean newState, EntityLocation to, Cancellable priorEvent) {
+        final EntityLocation from = player.getEntityLocation();
+
+        if(newState) {
+            from.motionFlags().remove(flag);
+            to.motionFlags().add(flag);
+        } else {
+            from.motionFlags().add(flag);
+            to.motionFlags().remove(flag);
+        }
+
+        final PlayerMoveEvent moveEvent = new PlayerMoveEvent(player, from, to);
+        if(priorEvent != null) {
+            moveEvent.setCancelled(priorEvent.isCancelled());
+        }
+
+        player.getServer().getPluginManager().callEvent(moveEvent);
+
+        if(priorEvent != null) {
+            priorEvent.setCancelled(moveEvent.isCancelled());
+        }
+
+        return moveEvent;
